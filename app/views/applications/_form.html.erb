    <%= form.label :color %>
    <%= form.text_field :color, id: :application_color %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.check_box :status, id: :application_status %>
  </div>

  <div class="field">
    <%= form.label :link %>
    <%= form.text_area :link, id: :application_link %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
